        "module": "commonjs",
        "target": "es2020",
        "outDir": "dist",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@repo/shared/lib/logger": [
