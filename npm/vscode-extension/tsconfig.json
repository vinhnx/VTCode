{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "vscode"
        ],
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@repo/shared/*": [
                "../shared/lib/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}
