{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "description": "Search query string",
      "minLength": 1,
      "maxLength": 500
    },
    "format": {
      "type": "string",
      "description": "Output format",
      "enum": ["json", "text", "summary"],
      "default": "json"
    },
    "max_results": {
      "type": "integer",
      "description": "Maximum number of results",
      "minimum": 1,
      "maximum": 50,
      "default": 10
    },
    "safe_search": {
      "type": "string",
      "description": "Safe search level",
      "enum": ["strict", "moderate", "off"],
      "default": "moderate"
    },
    "region": {
      "type": "string",
      "description": "Search region/country code",
      "pattern": "^[A-Z]{2}$",
      "default": "US"
    }
  },
  "required": ["query"],
  "additionalProperties": false
}